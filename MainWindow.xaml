<Window x:Class="WpfKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKeyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="White">
    <Grid>
        <!-- Title bar -->
        <Border Background="Gray" Height="30" VerticalAlignment="Top"
                MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown">
            <DockPanel LastChildFill="False">
                <!-- Title or MenuBar placeholder -->
                <TextBlock Text="Virtual keyboard POC" VerticalAlignment="Center" Margin="10,0,0,0" DockPanel.Dock="Left"/>

                <!-- Minimize button -->
                <Button Content="_" Width="30" Height="30" Click="MinimizeWindow" DockPanel.Dock="Right" Margin="0,0,40,0"/>

                <!-- Close button -->
                <Button Content="X" Width="30" Height="30" Click="CloseWindow" DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <Grid Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="391*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <RichTextBox x:Name="textArea" Margin="0,0,259,182" TextChanged="TextArea_TextChanged">
                <FlowDocument>
                    <Paragraph>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button x:Name="BtnStart" Content="Start sending text" HorizontalAlignment="Left" Margin="558,32,0,0" VerticalAlignment="Top" Height="31" Width="134" Click="BtnStartSendText" RenderTransformOrigin="0.159,0.818"/>
            <Button Content="Stop sending text" HorizontalAlignment="Left" Margin="558,67,0,0" VerticalAlignment="Top" Height="31" Width="134" Click="BtnStopSendText" RenderTransformOrigin="0.159,0.818"/>
            <Button x:Name="BtnSendTextToWeb1" Content="Send text to web page tekst 1" HorizontalAlignment="Left" Margin="558,123,0,0" VerticalAlignment="Top" Height="31" Width="179" Click="SendTextToWeb1" RenderTransformOrigin="0.159,0.818"/>
            <Button x:Name="BtnSendTextToTextarea" Content="Send text to comments textarea" HorizontalAlignment="Left" Margin="558,158,0,0" VerticalAlignment="Top" Height="31" Width="179" Click="SendTextToWebTextarea" RenderTransformOrigin="0.159,0.818"/>
        </Grid>
    </Grid>
</Window>
